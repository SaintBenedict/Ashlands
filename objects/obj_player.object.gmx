            <kind>1</kind>
            <string>///Гуй выбора авто-атаки

// Координаты вида и координаты мышки для автоатаки
Xx = view_wview[0]-40; // Икс нижнего правого угла
Y1y = view_hview[0]-40; // Игрик нижнего правого угла
Y2y = view_hview[0]-188; // Игрик чуть выше для всплывающего меню
moy = mouse_y-view_yview[0]; // Координаты мышки внутри вида
xoy = mouse_x-view_xview[0]; // Координаты мышки внутри вида


// Если нету диалога - рисуем первоначальный гуй. Отсутствие диалога обязательно для всего гуя.
if instance_number(obj_dlg2) = 0{
draw_sprite(spr_left_action,0,Xx,Y1y);
    if global.left_use = 1 {
    draw_sprite(spr_use_fire,0,Xx,Y1y);}
    if global.left_use = 0 {
    draw_sprite(spr_use_sword,0,Xx,Y1y);}

// Отрисовка всплывающего выбора, когда всплывающий выбор активирован чтобы выбрать спел
if (moy &gt; Y2y-27 &amp;&amp; moy &lt; Y1y+27 &amp;&amp; xoy &gt; Xx-27 &amp;&amp; xoy &lt; Xx+27 &amp;&amp; activate = 1)
{
    global.attack = 1; // Запрет атаки
    global.left_change = 1; // Мы меняем скил
    draw_sprite(spr_left_check,0,Xx,Y1y-27);      
    draw_sprite(spr_use_fire,0,Xx,Y2y+84);
    draw_sprite(spr_use_sword,0,Xx,Y2y);
    // Подсветка и выбор варианта под мышкой
    if (moy &gt; Y2y+84-27 &amp;&amp; moy &lt; Y2y+84+27 &amp;&amp; xoy &gt; Xx-27 &amp;&amp; xoy &lt; Xx+27) {
    draw_sprite(spr_use_fire,1,Xx,Y2y+84);
        if mouse_check_button_pressed(mb_left){
        global.left_use = 1;
        activate = 0;}}
    if (moy &gt; Y2y-27 &amp;&amp; moy &lt; Y2y+27 &amp;&amp; xoy &gt; Xx-27 &amp;&amp; xoy &lt; Xx+27) {
    draw_sprite(spr_use_sword,1,Xx,Y2y);
        if mouse_check_button_pressed(mb_left){
        global.left_use = 0;
        activate = 0;}}
}
else
{
    //Активация выбора и отрисовка всплывающего выбора.
    if (moy &gt; Y1y-27 &amp;&amp; moy &lt; Y1y+27 &amp;&amp; xoy &gt; Xx-27 &amp;&amp; xoy &lt; Xx+27)
        {
        global.attack = 1;
        global.left_change = 1; // Мы можем менять скил, когда мышка в зоне
            if mouse_check_button(mb_left)
            {
            draw_sprite(spr_left_check,0,Xx,Y1y-27);
            draw_sprite(spr_use_fire,0,Xx,Y2y+84);
            draw_sprite(spr_use_sword,0,Xx,Y2y);
